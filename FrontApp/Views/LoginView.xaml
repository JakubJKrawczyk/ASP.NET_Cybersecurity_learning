<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontApp.Views.LoginView">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
            
            <Label 
                Text="Login"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                WidthRequest="300"/>
            <Entry x:Name="LoginEntry" Placeholder="Login"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="300"/>
            <Label Text="Password"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="300"/>
            <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Password"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="300"/>
            <Button Text="Zaloguj" Clicked="LoginUser" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150"/>
            <Label
                x:Name="ResponseMessageLabel"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="Red"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>